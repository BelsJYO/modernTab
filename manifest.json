{
  "manifest_version": 2,
  "name": "Modern New Tab",
  "version": "1.0.0",
  "description": "A modern, customizable new tab page with configurable search engines and quick bookmarks",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'",
  
  "web_accessible_resources": [
    "assets/*"
  ]
}